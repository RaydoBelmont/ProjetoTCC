generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int             @id @default(autoincrement())
  nome       String
  email      String          @unique
  workspaces WorkspaceUser[]
  chamados   ChamadoUser[]
}

model Workspace {
  id       Int             @id @default(autoincrement())
  nome     String
  clientes Clientes[]
  users    WorkspaceUser[]
  quadros  Quadro[]
  chamados Chamado[]
}

model WorkspaceUser {
  userId      Int
  workspaceId Int
  isAdmin     Boolean
  user        User      @relation(fields: [userId], references: [id])
  workspace   Workspace @relation(fields: [workspaceId], references: [id])

  @@id([userId, workspaceId])
}

model Clientes {
  id          Int        @id @default(autoincrement())
  empresa     String
  razao       String
  endereco    String
  cpfCnpj     String
  iE          String
  email       String
  contatos    Contatos[]
  observacao  String
  workspaceId Int
  workspace   Workspace  @relation(fields: [workspaceId], references: [id])
  chamados    Chamado[]
}

model Contatos {
  id        Int      @id @default(autoincrement())
  nome      String
  telefone  String
  clienteId Int
  cliente   Clientes @relation(fields: [clienteId], references: [id])
}

model Chamado {
  id           Int           @id @default(autoincrement())
  titulo       String
  descricao    String
  criadoEm     DateTime
  atualizadoEm DateTime
  statusId     Int
  criadoPor    Int
  workspaceId  Int
  clienteId    Int
  quadroId     Int
  cliente      Clientes      @relation(fields: [clienteId], references: [id])
  workspace    Workspace     @relation(fields: [workspaceId], references: [id])
  quadro       Quadro        @relation(fields: [quadroId], references: [id])
  users        ChamadoUser[]
  status       Status        @relation(fields: [statusId], references: [id])
}

model Status {
  id      Int       @id @default(autoincrement())
  nome    String
  Chamado Chamado[]
}

model Quadro {
  id          Int       @id @default(autoincrement())
  nome        String
  workspaceId Int
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  chamados    Chamado[]
}

model ChamadoUser {
  userId    Int
  chamadoId Int
  user      User    @relation(fields: [userId], references: [id])
  chamado   Chamado @relation(fields: [chamadoId], references: [id])

  @@id([userId, chamadoId])
}
